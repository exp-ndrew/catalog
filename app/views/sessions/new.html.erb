<h2> Log In </h2>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], :class => "form-control"  %>
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password], :class => "form-control" %>
  </div>
  <%= submit_tag "Log In", :class => "btn btn-default" %>
<% end %>
