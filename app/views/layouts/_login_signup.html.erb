<% if current_user %>
  <span>Logged in as <%= current_user.email %></span> |
  <%= link_to "Log Out", logout_path, :class => "btn btn-xs btn-danger" %>
<% else %>
  <%= link_to "Sign Up", new_user_path, :class => "btn btn-xs btn-success" %>
  <%= link_to "Log In", login_path, :class => "btn btn-xs btn-default" %>
<% end %>
